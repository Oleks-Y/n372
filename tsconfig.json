{
	"compileOnSave": true,
	"compilerOptions": {
		"sourceMap": true,
		"declaration": true,
		"noImplicitAny": false,
		"noEmitOnError": true,
		"resolveJsonModule": true,
		"rootDir": "./",
		"outDir": "./lib",
		"target": "es2015",
		"module": "commonjs",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true
	},
	"exclude": ["node_modules", "dist", "test", "lib"],
	"$schema": "https://json.schemastore.org/tsconfig",
	"display": "Recommended"
}
